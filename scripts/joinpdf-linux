 #!/bin/bash

case "$(uname)" in
	Linux)
		READLINK="readlink"
		;;
	Darwin)
		READLINK="greadlink"
		;;
	*)
		READLINK="readlink"
esac

MY_PATH=`${READLINK} -f $0`
MY_PATH=`dirname $MY_PATH`
LIB_PATH=${MY_PATH}/../lib

java -cp ${LIB_PATH}/itextpdf/itextpdf-5.1.3.jar:${LIB_PATH}/pdf-tools.jar Concat "$@"